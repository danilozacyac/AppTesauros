                        <xcdg:TableView ShowFixedColumnSplitter="False" ShowRowSelectorPane="False" UseDefaultHeadersFooters="False" HorizontalGridLineThickness="0" VerticalGridLineThickness="0" ShowScrollTip="True"></xcdg:TableView>
